<view class="license">
    <view class="license-tit">
        <text class="tit">营业执照</text>
        <text class="tags">正常</text>
    </view>
    <view class="file">
        <view class="file-btn">
          <view class='pic' wx:for="{{imgs}}" wx:for-item="item" wx:key="*this">
              <image class='weui-uploader__img ' src="{{item}}" data-index="{{index}}" mode="aspectFill" bindtap="previewImg"></image>
          </view>
          <button class="upload-img-btn" bindtap="chooseImg" type='primary'>+</button>
        </view>
    </view>
    <view class="licenseContent">
        <view class="item">
            <text>公司主体</text>
            <input type="text" value="贵州佰群如生酒业有限公司" disabled="true"/>
        </view>
        <view class="item">
            <text>统一信用代码</text>
            <input type="text" value="91520103MAAK92E4XH" disabled="true"/>
        </view>
        <view class="item">
            <text>有效期</text>
            <input type="text" value="长期有效" disabled="true"/>
        </view>
    </view>

</view>




<view class="submit">
    <button>更新营业执照</button>
</view>































