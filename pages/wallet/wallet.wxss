.wallet{
  padding: 20rpx;
}
.walletTit .tit{
  font-size: 38rpx;
  font-weight: bold;
}
.walletTit .tags{
  font-size: 26rpx;
  color: #808080;
  border: 1px solid #cdcdcd;
  padding: 2rpx 10rpx;
  border-radius: 8rpx;
  margin-left: 15rpx;
}

.walletCon{
  background:linear-gradient(to left bottom ,#ffdf50,#ffd000);
  text-align: center;
  margin-top: 20rpx;
  padding: 70rpx 0;
  border-radius: 15rpx;
}
.walletCon .text{
  font-size: 28rpx;
  opacity: 0.7;
}
.walletCon .moneyNum{
  font-size: 70rpx;
  font-weight: bold;
}
.walletCon navigator{
  border: 1px solid rgba(0, 0, 0, 0.301);
  display: inline-block;
  padding: 5rpx 30rpx;
  border-radius: 10rpx;
  margin: 10px 0 0;
  font-size: 29rpx;
}


.tips{
  font-size: 28rpx;
  background-color: #fff;
  border-radius: 15rpx;
  padding: 20rpx;
  margin: 20rpx 0;
  line-height: 1.75;
  color: #666;
}



/* 提现、添加银行卡 */
.Withdrawal{
  display: flex;
  margin: 20rpx 0;
}
.Withdrawal .btnItem {
  flex: 1;
}
.Withdrawal .btnItem image{ 
  width: 70rpx;
  height: 70rpx;
  display: block;
  margin: 0 auto;
}
.Withdrawal .btnItem text{
  text-align: center;
  display: block;
  font-size: 30rpx;
}









