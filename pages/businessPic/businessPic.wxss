/* pages/businessPic/businessPic.wxss */
.pic{
  text-align: center;
}
.pic .picWrap{
  display: inline-block;
  width: 48%;
  height: 243rpx;
  margin: 7rpx;
  position: relative;
}
.pic .picWrap .close {
  position: absolute;
  right: 0;
  top: 0;
  background: rgba(0,0,0,0.3);
  width: 50rpx;
  height: 50rpx;
  color: #fff;
  line-height: 50rpx;
  text-align: center;
}
.pic .picWrap image{
  width: 100%;
  height: 100%;
  display: block;
}
.btn{
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
}
.btn .button{
  flex: 1;
  text-align: center;
  margin: 0 5rpx;
  padding: 18rpx 0;
}
.btn .button:first-child{
  background-color: #cfcfcf;
}
.btn .button:last-child{
  background-color: #fbdc0c;
}










