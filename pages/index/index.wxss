.top{
  background-color: #fbdc0c;
  padding: 20rpx 20rpx 100rpx;
  color: #1b170e;
}
.name{
  font-weight: bold;
  display: inline-block;
  vertical-align: middle;
  width: 60%;
  font-size: 40rpx;
}
.t_right{
  text-align: center;
  display: inline-block;
  vertical-align: middle;
}
.t_right image{
  width: 50rpx;
  height: 50rpx;
  display: block;
  margin: 0 auto;
}
.t_r_item{
  display: inline-block;
  vertical-align: middle;
  padding: 0 15rpx;
  position: relative;
}
.redpoint{
  position: absolute;
  width: 15rpx;
  height: 15rpx;
  background-color: #ec011a;
  border-radius: 50%;
  top: -5rpx;
  right: 40rpx;
  border: 6rpx solid #fbdc0c;
}
.t_r_item text{
  font-size: 28rpx;
}

.sale{
  background-color: #fff;
  margin: -70rpx 20rpx 0;
}

.sale{
  display: flex;
}
.sale_item{
  padding: 40rpx 30rpx;
  flex: 1;
  position: relative;
}
.sale_item .num{
  font-size: 46rpx;
  font-weight: bold;
}
.sale_item .span{
  font-size: 26rpx;
  color: #999;
  margin: 10rpx 0 0;
}
.sale_item image{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 15rpx;
  top: 50%;
  transform: translate(0,-50%);
}

.task{
  min-height: 200rpx;
  background-color: #fff;
  padding: 30rpx;
}
.taskTitle{
  display: flex;
  align-items: center;
  border-bottom: 1px solid rgb(245, 245, 245);
  padding-bottom: 20rpx;
}
.t_t_item{
  flex: 1;
}
.seeall{
  text-align: right;
}
.seeall text{
  display: inline-block;
  vertical-align: middle;
  font-size: 28rpx;
  color: #999;
}
.seeall image{
  width: 40rpx;
  height: 40rpx;
  display: inline-block;
  vertical-align: middle;
}
.t_t_tit{
  font-size: 36rpx;
  font-weight: bold;
}
.t_t_tit .text{
  position: relative;
  display: inline-block;
}
.t_t_tit .redpoint{
  border: 0;
  font-size: 24rpx;
  font-weight: 200;
  width: 30rpx;
  height: 30rpx;
  text-align: center;
  line-height: 30rpx;
  color: #fff;
  right: -30rpx;
}
.taskConItem{
  padding: 10px 0;
}
.taskConItem .tags{
  font-size: 26rpx;
  border: 1px solid #6ac987;
  color: #6ac987;
  padding: 5rpx 10rpx;
  border-radius: 7rpx;
  display: inline-block;
  vertical-align: middle;
}
.taskCon{
  display: inline-block;
  vertical-align: middle;
  width: 80%;
  padding: 0 20rpx;
}
.taskCon .p{
  font-size: 28rpx;
  color: #999;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
  margin: 10rpx 0;
}

.index_btn{
  display: flex;
  background-color: #fff;
  padding: 30rpx;
}
.index_btn .img image{
  width: 90rpx;
  height: 90rpx;
}
.index_btn navigator{
  flex: 1;
  text-align: center;
}
.index_btn .text{
  font-size: 28rpx;
}
.top_nav .nav-name{
  position: relative;
}
.top_nav .nav-name .tagsnum.active{
  position: absolute;
  width:30rpx ;
  height: 30rpx;
  background-color: #ec011a;
  border-radius: 50%;
  color: #fff;
  text-align: center;
  line-height: 30rpx;
  font-size: 26rpx;
  top: 10rpx;
}

.order-pro .tips{
  font-size: 30rpx;
  background-color: #f5eced;
  color: #f16f40;
  padding: 30rpx;
  margin: 20rpx 0;
  font-weight: 300;
}





.in-pro .in-o-btn button{
  margin: 20rpx ;
}
.in-pro .inorderProTop{
  padding: 20rpx 0;
}


/* 扫码核单 */
.saoma{
  position: fixed;
  bottom: 20rpx;
  right: 20rpx;
  text-align: center;
  width: 100rpx;
  height: 100rpx;
  background-color: #fbdb0cbb;
  padding:15rpx 10rpx 15rpx;
  box-sizing: border-box;
  border-radius: 10rpx;
  box-shadow: 0 0 20rpx rgba(0,0,0,0.05);
}
.saoma image{
  width: 35rpx;
  height: 35rpx;
}
.saoma .text{
  font-size: 26rpx;
}



