/* pages/InventoryDetails/InventoryDetails.wxss */
.fixed{
  position: fixed;
  width: 100%;
  top: 0;
  left: 0;
}
.total_tit{
  display: flex;
  background-color: #fff;
  border-bottom: 1px solid #eee;
}
.total_tit .item{
  flex: 1;
  text-align: center;
  margin: 30rpx 0;
  font-size: 30rpx;
  border-right: 1px solid #eee;
}
.total_tit .item:last-child{
  border: 0;
}
.DateSelect{
  display: flex;
  background-color: #fff;
  align-items: center;
}
.DateSelect .item{
  font-size: 29rpx;
  padding: 5rpx 15rpx;
  border: 1px solid #eee;
  margin: 20rpx 10rpx;
}
.DateSelect .item picker{
  display: inline-block;
  vertical-align: middle;
}

.inventoryDetailsCon{
  margin-top:220rpx ;
}
.inventoryDetailsCon .item{
  background-color: #fff;
  padding: 20rpx;
  margin-bottom: 15rpx;
}
.inventoryDetailsCon .date{
  font-size: 29rpx;
  border-bottom: 1px solid #eee;
  padding-bottom: 15rpx;
}
.detailsConItem{
  margin: 20rpx 0;
  border-bottom: 1px solid #eee;
  padding: 20rpx 0;
}
.detailsConItem:last-child{
  border: 0;
}
.num,.into {
  display: inline-block;
  vertical-align: middle;
}
.into{
  width: 80%;
}
.num{
  font-size: 40rpx;
  font-weight: bold;
  width: 19%;
  text-align: right;
}
.into .intoTitle{
  display: inline-block;
  vertical-align: middle;
  font-size: 40rpx;
  font-weight: bold;
  margin-right: 30rpx;
}
.into .ID{
  font-size: 28rpx;
  display: inline-block;
  vertical-align: middle;
  color: #666;
}
.into .ID .p{
  margin: 10rpx 0;
}










