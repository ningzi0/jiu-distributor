/* pages/analysis/analysis.wxss */
 .nav-name{
  padding: 30rpx 0;
  font-size: 34rpx;
  position: relative;
  text-align: left;
}
.nav-name.nav-hover{
  border: 0;
  font-weight: bold;
  border: 0;
  background: #f9d002;
}

.analysisContent .date{
  display: flex;
  background-color: #fff;
  font-size: 30rpx;
  margin: 10rpx 0;
  padding: 20rpx 0;
  align-items: center;
}
.analysisContent .date .dateItem{
  flex: 1;
  text-align: center;
  border-right: 1px solid #eee;
  color: #666;
}
.analysisContent .date .picker image{
  width: 30rpx ;
  height: 30rpx;
  position: relative;
  top: 5rpx;
}

.jiaoyi{
  background: #fff;
  margin: 20rpx;
  padding: 30rpx;
  border-radius: 10rpx;
}
.jiaoyi .title .span{
  font-size: 26rpx;
  color: #707070;
  margin-top: 10rpx;
}

.jiaoyiContent{
  display: flex;
}
.jiaoyiItem{
  margin: 50rpx 10rpx 20rpx 0;
  flex: 1;
  background: #f8f8f8;
  padding: 10rpx 20rpx;
  border-radius: 15rpx;
}
.jiaoyiItem .h3{
  font-size: 30rpx;
}
.jiaoyiItem .num{
  font-size: 38rpx;
  margin: 10rpx 0;
  font-weight: bold;
}
.jiaoyiItem .span{
  font-size: 26rpx;
}


.intro {
  margin: 30px;
  text-align: center;
}

ec-canvas {
  display: block;
  width: 113%;
  height: 600rpx;
  margin-left: -50rpx;
  margin-top: -50rpx;
}