/**app.wxss**/
page{
  background-color: #f4f4f8;
}
.b-radius{
  border-radius: 20rpx;
}
.m20{
  margin: 20rpx;
}
.b-shadow{
  box-shadow: 0 0 10rpx rgba(0,0,0,0.05);
}


/* =========== */
.top_nav{
  display: flex;
  width: 100%;
  top: 0;
  left: 0;
  background-color: #fff;
}
.orderContent{
margin-top: 125rpx;
}
.nav-name{
flex: 1;
text-align: center;
font-size: 34rpx;
color: #666;
}
.nav-name text.nameTit{
padding: 30rpx 0;
display: inline-block;
}
.nav-hover{
color: #000000;
border-bottom: 7rpx solid #fbdc0c;
}
.nav-hover text.nameTit{
font-weight: bold;
}
.add_shopCart{
  position: absolute;
  right: 10rpx;
  bottom: 10rpx;
  width: 60rpx;
  height: 60rpx;
  background-color: #fff;
  text-align: center;
  line-height: 56rpx;
  font-size: 40rpx;
  font-weight: bold;
  border-radius: 50%;
  color: #2030a7;
}


.datefiltering{
  background: #fff;
  margin: 20rpx;
  padding: 30rpx;
  font-size: 30rpx;
}



.inorder_item .date{
  padding: 20rpx;
  background-color: #fff;
  font-size: 28rpx;
}
.inorderPro{
  margin-top: 20rpx;
}
.inorderProItem{
  background-color: #fff;
  margin: 20rpx 0;
}
.inorderProTop{
  border-bottom: 1px solid #eee;
  position: relative;
}
.in_o_tags{
  font-size: 26rpx;
  background-color: #6ac987;
  color: #fff;
  position: absolute;
  padding: 5rpx 10rpx;
  right: 0;
  border-radius: 0 0 0 10rpx;
}
.inorderProTop .img image{
  width: 180rpx;
  height: 180rpx;
}
.inorderProTop .img{
  display: inline-block;
  vertical-align: middle;
}
.inorderProTop .inorderProTopInfo{
  display: inline-block;
  vertical-align: middle;
  width: 55%;
}
.in_o_p_i_tit{
  font-size: 30rpx;
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.in_o_p_i_sku{
  font-size: 29rpx;
  color: #999;
  margin: 10rpx 0;
}
.inorderProBottom{
  font-size: 29rpx;
  padding: 20rpx 30rpx;
  border-bottom: 1px solid #eee;
}
.in_o_p_b_item{
  display: flex;
  margin: 5rpx 0;
  color: #c0c1c5;
}
.in_o_p_b_item text{
  flex: 1;
}
.in_o_p_b_item text:last-child{
  text-align: right;
}

.Distribution{
  font-size: 30rpx;
  padding: 20rpx 30rpx;
  color: #666;
}
.dis_text text{
  color: #000;
  font-weight: bold;
}
.dis_text text:last-child{
  background-color: #fbdc0c;
  font-size: 26rpx;
  padding: 5rpx;
  color: #000;
  border-radius: 5rpx;
}
.Distribution .add{ 
  font-size: 29rpx;
  margin: 8rpx 0;
}
.in-o-btn{
  display: flex;
}
.in-o-btn button{
  flex: 1;
  background: none;
  border: 1px solid #eee;
  margin: 0 20rpx 20rpx;
  font-size: 30rpx;
  font-weight: 400;
}




.submit{
  background-color: #fff;
  padding: 20rpx;
  position: fixed;
  width: 100%;
  bottom: 0;
  box-sizing: border-box;
}
.submit button{
  background-color: #ffd006;
  width: 100%;
  border-radius: 200rpx;
}

.agreement{
  font-size: 28rpx;
  padding: 20rpx;
  line-height: 1.75;
  background-color: #fff;
  margin: 15rpx;
  border-radius: 10rpx;
}
.agreement .h3{
  font-size: 40rpx;
  font-weight: bold;
}

/* 更改checkbox样式 */
checkbox .wx-checkbox-input {
	width: 30rpx;
	height: 30rpx;
	border-radius: 50%;
}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background: #0029a7;
  border-color:#0029a7;
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 20rpx;
  height: 20rpx;  
  line-height: 20rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}



/* 模态框 */
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modal-dialog {
  width: 610rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: #f9f9f9;
  margin: 0 70rpx;
  border-radius: 36rpx;
  transform: translate(0,-50%);
}
.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}
.modal-content {
  padding: 50rpx 32rpx;
  font-size: 28rpx;
}
.modal-content .p{
  margin-bottom: 15rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 86rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 86rpx;
}
.btn-cancel {
  width: 50%;
  color: #666;
  text-align: center;
  border-right: 1px solid #dedede;
}
.btn-confirm {
  width: 100%;
  color: #353897;
  text-align: center;
}
